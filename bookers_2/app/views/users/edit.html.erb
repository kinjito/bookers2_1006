<body>
 <main>
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <div class="container ">
     <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User info</h2>
        <div id="error_explanation">
         <% if @user.errors.any? %>
           <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
           <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
         <% end %>
        </div>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
         <P><%= f.text_field :name ,class: "form-control name"%></P>
      </div>
      <div class="form-group">
         <label for="user_image">Image</label>
         <P><%= f.attachment_field :profile_image, class: "form-control-file user_image"%></P>
        </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <P><%= f.text_area :introduction, class: "form-control introduction"%></P>
      </div>
      <div class="form-group">
        <P><%= f.submit 'Update User',class: "btn btn-secondary"%></P>
      </div>
      <% end %>
      </div>
     </div>
    </div>
</main>
</body>